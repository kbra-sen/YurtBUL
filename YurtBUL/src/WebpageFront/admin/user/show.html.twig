{% extends 'Adminbase.html.twig' %}
{% block title %} Admin Panel {% endblock %}
{% block content %}
    <div id="page-wrapper" style="min-height: 565px;">
        <div class="container-fluid">
            <div class="row bg-title">
                <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                    <h4 class="page-title">Üye Listesi</h4> </div>

            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="white-box">
                        <h3 class="box-title"> Üye Bilgisi <small><a href="{{ path('admin_user_index') }}" class="btn btn-danger pull-right btn-sm   hidden-xs hidden-sm waves-effect waves-light"> Listeye Geri Dön</a></small>
                        </h3>
                        <div class="table-responsive">
                            <table class="table">
                                <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ user.id }}</td>
                                </tr>
                               {# <tr>
                                    <th>Image</th>
                                    <td>{{ user.image }}</td>
                                </tr>#}
                                <tr>
                                    <th>Ad Soyadı</th>
                                    <td>{{ user.name }}</td>
                                </tr>
                                <tr>
                                    <th>Email</th>
                                    <td>{{ user.email }}</td>
                                </tr>
                                <tr>
                                    <th>Parola</th>
                                    <td>{{ user.password }}</td>
                                </tr>
                               {# <tr>
                                    <th>Oluşturulma</th>
                                    <td>{{ user.createAt ? user.createAt|date('Y-m-d H:i:s') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Güncelleme</th>
                                    <td>{{ user.updateAt ? user.updateAt|date('Y-m-d H:i:s') : '' }}</td>
                                </tr>#}
                                <tr>
                                    <th>Durum</th>
                                    <td>{{ user.status }}</td>
                                </tr>
                                <tr>
                                    <td> <small><a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-info btn-sm hidden-xs hidden-sm waves-effect waves-light"> Düzenle </a></small></td>
                                    <td>  {{ include('admin/user/_delete_form.html.twig') }}</td>
                                </tr>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
