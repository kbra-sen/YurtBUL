    <div class="form-group">
        <label for="">Durum</label>
        <input type="radio" name="yurt[durum]" value="true"  checked="on"> true
        <input type="radio" name="yurt[durum]" value="false"> false<br>
    </div>
    <button type="submit" class="btn btn-primary  pull-left btn-sm">Kaydet</button>
</form>


<script type="text/javascript" >

    $(document).ready(function () {
        $("#ilce").hide();
        $("#il").change(function () {
            var ilid=$(this).val();

            $.ajax({

                type:"POST",
                url:'/ilceler',

                data:{'il': ilid},
                success:function (e) {
                    $("#ilce").show();
                    $("#ilce").html(e);

                }

            })
        })
    })
</script>