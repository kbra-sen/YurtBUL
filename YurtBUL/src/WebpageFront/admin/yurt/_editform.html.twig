    <div class="form-group">
        <label for="">Yıl</label>
        <input type=" " name="yurt[yil]" value="{{ yurt.yil }}" class="form-control" id="" aria-describedby="emailHelp" placeholder="">
    </div>
    <div class="form-group">
        <label for="">Fiyat</label>
        <input type="ad" name="yurt[fiyat]" value="{{ yurt.fiyat}}" class="form-control" id="" aria-describedby="emailHelp" placeholder="">
    </div>
    <div class="form-group">
        <label for="">WebPage</label>
        <input type="ad" name="yurt[webpage]" value="{{ yurt.webpage }}" class="form-control" id="" aria-describedby="emailHelp" placeholder="">
