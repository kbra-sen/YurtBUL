        <input type="hidden" name="yurt[image]" class="form-control" value="{{ yurt.image }}" id="" aria-describedby="emailHelp">
    </div>
    <div class="form-group">
        <label for="">Kategori</label>
        <select  name="yurt[categoryid]"  class="form-control ">
            <option value="{{ yurt.categoryid }}" >{{ catname[0].title }}</option>

            {% for cat in catlist %}
                <option value="{{ cat.id }}" > {{ cat.title }}</option>
            {% endfor %}
        </select>
