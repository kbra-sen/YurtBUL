        <input type="" class="form-control" name="yurt[adres]" value="{{ yurt.adres }}" id="exampleInputPassword1"  >
    </div>
    <div class="form-group">
        <label for="">Telefon</label>
        <input type=" " name="yurt[telefon]" value="{{ yurt.telefon }}" class="form-control" id="" aria-describedby="emailHelp" placeholder="">
