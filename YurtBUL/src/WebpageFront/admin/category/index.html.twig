{% extends 'Adminbase.html.twig' %}

{% block title %}Kategoriler {% endblock %}
{% block content %}
    <div id="page-wrapper" style="min-height: 565px;">
        <div class="container-fluid">
            <div class="row bg-title">
                <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                    <h4 class="page-title">Kategori Listesi</h4> </div>

            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="white-box">
                        <h3 class="box-title"> Kategoriler  <small><a href="{{ path('admin_category_new') }}" class="btn btn-danger pull-right btn-sm  m-l-20 hidden-xs hidden-sm waves-effect waves-light">Kategori  ekle</a></small>
                        </h3>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Parentid</th>
                                    <th>Title</th>
                                    <th>Keywords</th>
                                    <th>Description</th>
                                    <th>Status</th>

                                    <th>Göster</th>
                                    <th>Düzenle</th>
                                    <th>Sil</th>

                                </tr>
                                </thead>
                                <tbody>
                                {% for category in categories %}
                                    <tr>
                                        <td>{{ category.id }}</td>
                                        <td>{{ category.parentid }}</td>
                                        <td>{{ category.title }}</td>
                                        <td>{{ category.keywords }}</td>
                                        <td>{{ category.description }}</td>
                                        <td>{{ category.status }}</td>



                                        <td>  <a href="{{ path('admin_category_show', {'id': category.id}) }}" class="btn btn-block btn-info btn-sm ">Göster</a></td>
                                        <td> <a href="{{ path('admin_category_edit', {'id': category.id, 'pid':category.parentid}) }}" class=" btn btn-block btn-warning btn-sm  ">Düzenle</a></td>
                                        <td>  {{ include('admin/category/_delete_form.html.twig') }}</td>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="9">no records found</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
